# Podman Configuration
if [[ $(command -v systemctl) ]]
then
    # Systemd based Distribution
    export XDG_RUNTIME_DIR=/run/user/$(id -u)
fi

export XDG_CONFIG_HOME="/home/podman/.config"
export TMPDIR="/home/podman/containers/tmp"

